<div class="image-container" style="background-image: url(Images/@Images[displayIndex])">
    <button @onclick="@SlideRight" class="btn-right"><i class="oi oi-arrow-thick-right"></i></button>
    <button @onclick="@SlideLeft" class="btn-left"><i class="oi oi-arrow-thick-left"></i></button>
    <div class="review-shader">
    </div>

    <div class="content">
        @if (reviews != null)
        { 
            <div class="top">
                <div class="quote">
                    <i class="fas fa-quote-left"></i>
                </div>
                <div class="stars">
                    @for (int i = 0; i < reviews[displayIndex].Grade; i++)
                    {
                        <i class="fa fa-star"></i>
                    }
                    </div>
                </div>
            <div class="description">@reviews[displayIndex].Description</div>
            <div class="info">
                <p class="author">
                    @if (string.IsNullOrEmpty(reviews[displayIndex].FirstName))
                    {
                        <text>Anonymous author</text>
                    }
                    else
                    {
                        <text>@reviews[displayIndex].FirstName @reviews[displayIndex].LastName</text>
                    }
                </p>
            </div>
        }
    </div>
</div>

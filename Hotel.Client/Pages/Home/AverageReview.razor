<div class="avg-review-row">
        @if(Average != 0)
        {
            <div class="stars">

                @for(int i = 1; i <= Math.Ceiling(Average); i++)
                {
                <span>★</span>
                }
            </div>
            <div class="average-grade">Betyg @Average.ToString("0.0")</div>
        }
</div>

@code 
{
    [Parameter] public double Average { get; set; }
}

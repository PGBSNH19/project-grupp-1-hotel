@page "/booking/cancel/{bookingNumber}"
@page "/booking/cancel"

<h3>Cancel Booking</h3>

@if (bookinginfo == null)
{
    <p>Not found booking information</p>
}
else
{
    if(!bookinginfo.IsCanceled)
    { 
        <div class="column">
            <div class="col">Your Booking id is: <b>@bookinginfo.Id</b></div>
            @*Todo: Update nuget with firstname and lastname to be able to show it in the cancel page*@

            <div class="col">With the Check in Date: <b>@bookinginfo.CheckInDate.ToString("dd/M/yyyy")</b></div>
            <div class="col">With the Check out Date: <b>@bookinginfo.CheckOutDate.ToString("dd/M/yyyy")</b></div>
            <div class="col">Your room type is: <b>@roomViewModel.RoomType</b></div>
            <br />
                <input class="form-control mr-sm-2" type="search" placeholder="Enter your Email" @bind="email" aria-label="Search">
                <button class="btn btn-outline-warning my-2 my-sm-0" type="submit" @onclick="@DeleteBooking">Delete</button>

        </div>
    }
    else
    {
        
    }
}


<EditForm Model="@AvailableRoom" OnValidSubmit="EventCallback">
    <div id="main" class="mb-4">
        <DataAnnotationsValidator />
        <div class="form-group">
            <label for="Guests">Guests</label>
            <div>
                <InputSelect id="Guests" @bind-Value="@AvailableRoom.Guests" class="form-control-sm w-100">
                    @foreach (var i in numberOfGuest)
                    {<option>@i</option>}
                </InputSelect>
                <ValidationMessage For="@(() => AvailableRoom.Guests)" />
            </div>
        </div>
        <div class="form-group ">
            <div>
                <label for="CheckIn">Check in</label>
                <div>
                    <InputDate id="CheckIn" @bind-Value="@AvailableRoom.CheckInDate" max="9999-12-31" @bind-Value:format="dd/MM/yyyy" class="form-control-sm w-100"></InputDate>
                    <ValidationMessage For="@(() => AvailableRoom.CheckInDate)" />
                </div>
            </div>
        </div>
        <div class="form-group ">
            <div>
                <label for="CheckOut">Check out</label>
                <div>
                    <InputDate id="CheckOut" @bind-Value="@AvailableRoom.CheckOutDate" max="9999-12-31" @bind-Value:format="dd/MM/yyyy" class="form-control-sm w-100"></InputDate>
                    <ValidationMessage For="@(()=> AvailableRoom.CheckOutDate)"></ValidationMessage>
                </div>
            </div>
        </div>
        <div class="search-btn">
            <button name="Search" aria-label="Search" type="submit" class="btn btn-outline-light btn-sm h-50 mt-4">Search</button>
        </div>
    </div>
</EditForm>
